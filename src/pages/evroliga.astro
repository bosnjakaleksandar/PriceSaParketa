---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import EuroleagueTable from '../components/EuroleagueTable.astro';
import FixturesCard from '../components/FixturesCard.astro';
import HeroSmall from '../components/HeroSmall.astro';

const pages = await getCollection('pages');
const pageData = pages.find((page) => page.data.language === 'sr' && page.slug === 'evroliga');

const title = pageData?.data.title || 'Evroliga';
const description = pageData?.data.hero.description || 'Pregled tabele i rasporeda utakmica';
---

<Layout title={title + ' - PriÄe sa parketa'} description={description} lang="sr">
  <main class="euroleague">
    <HeroSmall title={title} description={description} />
    <EuroleagueTable lang="sr" />
    <FixturesCard lang="sr" />
  </main>
</Layout>
