---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import EuroleagueTable from '../../components/EuroleagueTable.astro';
import FixturesCard from '../../components/FixturesCard.astro';
import HeroSmall from '../../components/HeroSmall.astro';

const pages = await getCollection('pages');
const pageData = pages.find((page) => page.data.language === 'en' && page.slug === 'euroleague');

const title = pageData?.data.title || 'Euroleague';
const description = pageData?.data.hero.description || 'Live standings and fixtures';
---

<Layout title={title + ' - Stories from the Court'} description={description} lang="en">
  <main class="euroleague">
    <HeroSmall title={title} description={description} />
    <EuroleagueTable lang="en" />
    <FixturesCard lang="en" />
  </main>
</Layout>
